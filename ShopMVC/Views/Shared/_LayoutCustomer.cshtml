
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<meta charset="utf-8">

	<meta content="" name="keywords">
	<meta content="" name="description">
	<link rel="icon" href="~/Hinh/thaolinh.png" type="image/x-icon">

	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

	<!-- Icon Font Stylesheet -->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

	<!-- Libraries Stylesheet -->
	<link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
	<link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


	<!-- Customized Bootstrap Stylesheet -->
	<link href="~/css/bootstrap.min.css" rel="stylesheet">

	<!-- Template Stylesheet -->
	<link href="~/css/style.css" rel="stylesheet">
	@RenderSection("Styles", required: false)
</head>
<body>

	<div>

		<!-- Spinner Start -->
		<div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
			<div class="spinner-grow text-primary" role="status"></div>
		</div>
		<!-- Spinner End -->
		<!-- Navbar start -->
		<div class="container-fluid fixed-top">
			<div class="container topbar bg-primary d-none d-lg-block">
				<div class="d-flex justify-content-between">
					<div class="top-info ps-2">
						<small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">433 Lý Bôn TP Thái Bình</a></small>
						<small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">Quochoan151096@gmail.com</a></small>
					</div>
					<div class="top-link pe-2">
						<a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
						<a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
						<a asp-controller="KhachHang" asp-action="DangKy" class="text-white"><small class="text-white ms-2">Đăng ký</small></a>
					</div>
				</div>
			</div>
			<div class="container px-0">
				<nav class="navbar navbar-light bg-white navbar-expand-xl">
					<a asp-action="Index" asp-controller="Home" class="navbar-brand me-auto">
						<h1 class="text-primary display-6" style="font-size: calc(0.9rem + 0.5vw);">
							<img src="~/Hinh/thaolinh.png" alt="Logo Shop"
								 style="width:80px;height:80px"> Thảo Linh Mobile
						</h1>
					</a>
					@* nút thu gọn *@
					<button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
						<span class="fa fa-bars text-primary"></span>
					</button>

					<div class="collapse navbar-collapse bg-white" id="navbarCollapse">
						<div class="container-fluid">
							<div class="row w-120">
								<div class="col-12 col-md-12 d-flex">
									<div class="navbar-nav mx-auto">

										<a asp-controller="HangHoa" asp-action="index" class="nav-item nav-link active">Shop</a>

										<div class="nav-item dropdown">
											<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Danh mục</a>
											<div class="dropdown-menu m-0 bg-secondary rounded-0">


												@await Component.InvokeAsync("DanhMuc")

											</div>
										</div>

										<div class="nav-item dropdown">
											<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Thành viên</a>
											<div class="dropdown-menu m-0 bg-secondary rounded-0">
												@if (User.Identity.IsAuthenticated)
												{
													<a asp-controller="KhachHang" asp-action="Profile" class="dropdown-item">Profile</a>
													<a asp-controller="KhachHang" asp-action="DangXuat" class="dropdown-item">Logout</a>
												}
												else
												{
													<a asp-controller="KhachHang" asp-action="DangKy" class="dropdown-item">Đăng ký</a>
													<a asp-controller="KhachHang" asp-action="DangNhap" class="dropdown-item">Đăng nhập</a>
													<a asp-controller="KhachHang" asp-action="QuenMatKhau" class="dropdown-item">Quên mật khẩu</a>
												}

											</div>											
										</div>
										<a href="contact.html" class="nav-item nav-link">Liên hệ</a>
									</div>



									<div class="col-12 col-md-6 d-flex justify-content-end align-items-center">
										@* Tìm kiếm  *@
										<form class="d-flex align-items-center" asp-action="Search" asp-controller="HangHoa" method="get">
											<input style="height: 1vh;width: calc(100% - 80px);" type="search" class="form-control p-3" placeholder="Tìm kiếm" aria-describedby="search-icon-1" name="query" value="@ViewContext.HttpContext.Request.Query["query"]">
											<button style="transform: translateX(8px);" class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal">
												<i class="fas fa-search text-primary "></i>
											</button>
										</form>

										@await Component.InvokeAsync("Cart")


										@if (User.Identity.IsAuthenticated)
										{
											<a asp-controller="KhachHang" asp-action="Profile" title="Xem thông tin người dùng" class="my-auto">
												<i class="fas fa-user-circle fa-2x"></i>
											</a>
										}
										else
										{
											<a asp-controller="KhachHang" asp-action="DangNhap" title="Đăng nhập" class="my-auto">
												<i class="fas fa-user-circle fa-2x"></i>
											</a>
										}
									</div>

								</div>
							</div>
						</div>
					</div>
				</nav>
			</div>
		</div>
		<!-- Navbar End -->


		<div style="min-height: 400px;">
			@RenderBody()
		</div>


		@await Html.PartialAsync("_Footer")
	</div>



	<!-- Back to Top -->
	<a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


	<!-- JavaScript Libraries -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/easing/easing.min.js"></script>
	<script src="~/lib/waypoints/waypoints.min.js"></script>
	<script src="~/lib/lightbox/js/lightbox.min.js"></script>
	<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

	<!-- Template Javascript -->
	<script src="~/js/main.js"></script>
	@RenderSection("Scripts", required: false)
	<script>
		// Bắt sự kiện khi người dùng nhập vào ô tìm kiếm
		document.getElementById('searchInput').addEventListener('input', function () {
			var searchValue = this.value;
			var searchButton = document.getElementById('searchButton');

			if (searchValue.length > 0) {
				searchButton.innerHTML = searchValue;
			} else {

				searchButton.innerHTML = '<i class="fas fa-search text-primary"></i>';
			}
		});
	</script>
</body>
</html>
