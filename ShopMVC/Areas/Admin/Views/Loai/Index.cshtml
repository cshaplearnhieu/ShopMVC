@model IEnumerable<ShopMVC.Areas.Admin.ViewModelsAd.LoaiAdVM>
@{
    ViewData["Title"] = "Quản lý loại hàng hoá";

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý loại hàng hóa</h2>

<a asp-action="Them" class="btn btn-primary">Thêm loại hàng hóa</a>

<table class="table">
    <thead>
        <tr>
            <th>Mã loại</th>
            <th>Tên loại</th>
            <th>Chỉnh sửa</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaLoai</td>
                    <td>@item.TenLoai</td>
                    <td>
                        <a asp-action="Sua" asp-route-id="@item.MaLoai" class="btn btn-warning">Sửa</a>
                        <a asp-action="Xoa" asp-route-id="@item.MaLoai" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa loại hàng hóa này?');">Xóa</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">Không có loại hàng hóa nào.</td>
            </tr>
        }
    </tbody>
</table>
