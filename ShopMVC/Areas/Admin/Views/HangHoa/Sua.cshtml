@model ShopMVC.Areas.Admin.ViewModelsAd.HangHoaAdVM
@{
    ViewData["Title"] = "Sửa hàng hoá";
}



<form asp-action="Sua" method="post" enctype="multipart/form-data">
    <input type="hidden" name="MaHH" value="@Model.MaHH" />
    <div class="form-group">
        <label for="TenHH">Tên Hàng Hóa</label>
        <input type="text" class="form-control" id="TenHH" name="TenHH" value="@Model.TenHH" required />
    </div>
    <div class="form-group">
        <label for="DonGia">Đơn Giá</label>
        <input type="number" class="form-control" id="DonGia" name="DonGia" value="@Model.DonGia" required />
    </div>
    <div class="form-group">
        <label for="MoTa">Mô Tả</label>
        <textarea class="form-control" id="MoTa" name="MoTa">@Model.MoTa</textarea>
    </div>
    <div class="form-group">
        <label for="MaLoai">Loại Sản Phẩm</label>
        <select class="form-control" id="MaLoai" name="MaLoai">
            
        </select>
    </div>
    <div class="form-group">
        <label for="Hinh">Hình Ảnh</label>
        <input type="file" class="form-control" id="Hinh" name="Hinh" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>

